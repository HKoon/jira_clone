{
  "name": "jira-clone",
  "services": {
    "api": {
      "buildCommand": "cd api && npm install && npm run build",
      "startCommand": "cd api && npm start",
      "environment": {
        "NODE_ENV": "production"
      },
      "ports": [5000],
      "healthCheck": {
        "path": "/api/test",
        "timeout": 30
      }
    },
    "client": {
      "buildCommand": "cd client && npm install && npm run build",
      "startCommand": "cd client && npm run serve",
      "environment": {
        "NODE_ENV": "production",
        "REACT_APP_API_URL": "${ZEABUR_WEB_URL}/api"
      },
      "ports": [3000],
      "healthCheck": {
        "path": "/",
        "timeout": 30
      }
    },
    "database": {
      "type": "postgresql",
      "version": "14"
    }
  },
  "dependencies": {
    "api": ["database"],
    "client": ["api"]
  }
}