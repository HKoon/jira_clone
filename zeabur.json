{
  "name": "jira-clone",
  "services": {
    "api": {
      "source": {
        "type": "git"
      },
      "build": {
        "commands": [
          "cd api",
          "npm install",
          "npm run build"
        ]
      },
      "start": "cd api && npm start",
      "env": {
        "NODE_ENV": "production"
      },
      "expose": 5000
    },
    "web": {
      "source": {
        "type": "git"
      },
      "build": {
        "commands": [
          "cd client",
          "npm install",
          "npm run build"
        ]
      },
      "start": "cd client && npm run serve",
      "env": {
        "NODE_ENV": "production"
      },
      "expose": 3000
    }
  }
}